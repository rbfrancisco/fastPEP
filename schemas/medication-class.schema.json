{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MedicationClass",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "label",
    "options"
  ],
  "properties": {
    "label": {
      "type": "string",
      "minLength": 1
    },
    "options": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      }
    }
  }
}
