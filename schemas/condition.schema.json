{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Condition",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "physicalExamAddons",
    "conduct",
    "prescriptionGroups"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "physicalExamAddons": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      }
    },
    "conduct": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "prescriptionGroups": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "label",
              "type",
              "options",
              "default"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "type": {
                "const": "radio"
              },
              "options": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                }
              },
              "default": {
                "type": "string",
                "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "label",
              "items"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "items": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "type",
                        "medId",
                        "checked"
                      ],
                      "properties": {
                        "type": {
                          "const": "med"
                        },
                        "medId": {
                          "type": "string",
                          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                        },
                        "checked": {
                          "type": "boolean"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "type",
                        "classId",
                        "default",
                        "checked"
                      ],
                      "properties": {
                        "type": {
                          "const": "class"
                        },
                        "classId": {
                          "type": "string",
                          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                        },
                        "default": {
                          "type": "string",
                          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                        },
                        "checked": {
                          "type": "boolean"
                        },
                        "duration": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        ]
      }
    }
  }
}
